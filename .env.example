# ===========================================
# NayooAI WhatsApp Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For Railway: Add these in the Variables tab

# Database (Railway MySQL or PlanetScale)
DATABASE_URL="mysql://user:password@host:port/database"

# AI Providers (at least one required)
GROQ_API_KEY="gsk_your_groq_api_key"
GEMINI_API_KEY="your_gemini_api_key"
SAMBANOVA_API_KEY="your_sambanova_api_key"
OPENROUTER_API_KEY="sk-or-v1-your_openrouter_key"

# Email (SMTP for password reset & verification)
SMTP_EMAIL="your_email@gmail.com"
SMTP_PASS="your_app_password"

# Server Configuration (Optional - Railway sets PORT automatically)
PORT=3000
NODE_ENV=production
